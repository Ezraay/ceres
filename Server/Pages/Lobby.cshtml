@page
    <div class="container">
        <div class="row p-1">
            <div class="col-10">
                <hr />
            </div>
        </div>
        <div class="row p-1">
            <div class="col-10">
                <ul id="clientsList"></ul>
            </div>
        </div>
        <div class="row p-1">
            <div class="col-10">
                <hr />
            </div>
        </div>
        <div class="row p-1">
            <div class="col-1">User</div>
            <div class="col-3"><input type="text" id="userInput" /></div>
            <div class="col-1 text-end">
                <input type="button" id="readytToPlayButton" value="Ready To Play" />
            </div>
        </div>
        <div class="row p-1">
            <div class="col-1">Message</div>
            <div class="col-5"><input type="text" class="w-100" id="messageInput" /></div>
        </div>
        <div class="row p-1">
            <div class="col-6 text-end">
                <input type="button" id="sendButton" value="Send Message" />
            </div>
        </div>
        <div class="row p-1">
            <div class="col-6">
                <hr />
            </div>
        </div>
        <div class="row p-1">
            <div class="col-6">
                <ul id="messagesList"></ul>
            </div>
        </div>

    </div>

    <script src="~/js/signalr.js"></script>
    <script src="~/js/lobby.js"></script>